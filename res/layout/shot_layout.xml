<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cceeff"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <ScrollView
        android:id="@+id/scrollView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:background="#cceeff"
                android:orientation="horizontal"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="#7788ff"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="select outcome"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="#7788ff"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="select shot type"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:background="#cceeff"
                android:orientation="horizontal"
                android:padding="0dp" >

                <RadioGroup
                    android:id="@+id/radioGroup_shot_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="#aaccdd"
                    android:measureWithLargestChild="false"
                    android:orientation="vertical"
                    android:paddingLeft="20dp" >

                    <RadioButton
                        android:id="@+id/radio_shot_r00"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:text="goal"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r01"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:text="point"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r02"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:text="wide"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r03"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:text="45/65"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r04"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:text="saved"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r05"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:text="short"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r06"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:text="off posts"
                        android:textSize="12sp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup_shot_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="#aaccdd"
                    android:measureWithLargestChild="false"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radio_shot_t00"
                        android:layout_width="140dp"
                        android:layout_height="33dp"
                        android:text="FROM PLAY -   hand/air strike"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t01"
                        android:layout_width="150dp"
                        android:layout_height="33dp"
                        android:text="FROM PLAY -        ground strike/kick"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t02"
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:text="free"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t03"
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:text="45/65"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t04"
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:text="sideline"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t05"
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:text="penalty"
                        android:textSize="12sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#cceeff"
                android:orientation="horizontal"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/shotlabel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7788ff"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="select player"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:background="#cceeff"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="0dp" >

                <Button
                    android:id="@+id/ButtonP14"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="FF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP11"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ButtonP14"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="CF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP12"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP11"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/ButtonP11"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="LHF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP10"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP11"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/ButtonP11"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="RHF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP13"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP14"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/ButtonP14"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="RCF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP15"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP14"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/ButtonP14"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="LCF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP09"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ButtonP12"
                    android:layout_below="@+id/ButtonP11"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="MF9"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP08"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/ButtonP10"
                    android:layout_below="@+id/ButtonP11"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="MF2"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP06"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ButtonP09"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="CB"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP05"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP06"
                    android:layout_alignBottom="@+id/ButtonP06"
                    android:layout_toRightOf="@+id/ButtonP06"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="RHB"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP07"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP06"
                    android:layout_alignBottom="@+id/ButtonP06"
                    android:layout_toLeftOf="@+id/ButtonP06"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="LHB"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP03"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ButtonP06"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="FB"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP02"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP03"
                    android:layout_alignBottom="@+id/ButtonP03"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ButtonP11"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="RFB"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP04"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ButtonP03"
                    android:layout_alignBottom="@+id/ButtonP03"
                    android:layout_toLeftOf="@+id/ButtonP03"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:text="LFB"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ButtonP01"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ButtonP03"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_custom"
                    android:includeFontPadding="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="2dp"
                    android:text="GOAL"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>