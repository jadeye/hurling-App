<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutStarttm"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/managepanel"
                android:layout_width="140dp"
                android:layout_height="46dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="manage panel"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/training"
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:layout_alignLeft="@+id/managepanel"
                android:layout_alignRight="@+id/managepanel"
                android:layout_below="@+id/managepanel"
                android:layout_centerVertical="true"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="manage training"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/resetdata"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_alignLeft="@+id/match"
                android:layout_alignRight="@+id/match"
                android:layout_below="@+id/training"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="start new match"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/match"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_below="@+id/resetdata"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="continue existing match"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/training"
                android:layout_alignRight="@+id/training"
                android:layout_below="@+id/match"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="save / email match data"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/quit"
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:layout_below="@+id/email"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:background="@android:drawable/btn_default"
                android:minHeight="0dp"
                android:text="quit"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>